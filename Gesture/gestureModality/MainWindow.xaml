<Window x:Class="Microsoft.Samples.Kinect.DiscreteGestureBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
        Title="Discrete Gesture Basics"
        Height="650" Width="750"
        Closing="MainWindow_Closing">

    <Grid Width="600" Height="500">
        <StackPanel Orientation="Vertical" Grid.RowSpan="2">
            <Viewbox x:Name="kinectBodyViewbox" VerticalAlignment="Top" Width="450" Height="450">
                <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
            </Viewbox>
            <TextBox x:Name="gestWindow" HorizontalAlignment="Center" Height="35" Margin="0" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" FontSize="26" />
        </StackPanel>
    </Grid>
</Window>