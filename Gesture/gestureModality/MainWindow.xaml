<Window x:Class="Microsoft.Samples.Kinect.DiscreteGestureBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Microsoft.Samples.Kinect.DiscreteGestureBasics"
        Title="Discrete Gesture Basics"
        Height="650" Width="750"
        Closing="MainWindow_Closing">
    
    <StackPanel Orientation="Vertical" Grid.RowSpan="2">
        <Viewbox x:Name="kinectBodyViewbox" VerticalAlignment="Top" Width="450" Height="400">
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Label x:Name="label_gesture" Content="Gesture: -" FontSize="14" BorderThickness="0" Width="248"></Label>
            <Label x:Name="label_conf" Content="Confidence: 0%" FontSize="14" Margin="-248, 30, 0 ,0" BorderThickness="0" Width="248"></Label>
        </StackPanel>
    </StackPanel>
</Window>